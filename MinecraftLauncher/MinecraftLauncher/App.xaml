<Application
    x:Class="MinecraftLauncher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <SolidColorBrush x:Key="GrayText" Color="{ThemeResource SystemColorGrayTextColor}"/>
            <x:Double x:Key="PageTitleHeight">28</x:Double>
            <Thickness x:Key="PageFrameMargin">0,28,0,0</Thickness>
            <VerticalAlignment x:Key="TitleContentVerticalAlignment">Bottom</VerticalAlignment>

            <SolidColorBrush x:Key="WindowCaptionBackground" Color="{ThemeResource SystemChromeMediumColor}"/>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="{ThemeResource SystemChromeMediumColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
