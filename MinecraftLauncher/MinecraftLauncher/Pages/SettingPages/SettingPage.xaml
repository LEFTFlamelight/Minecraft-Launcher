<Page
    x:Class="MinecraftLauncher.Pages.SettingPages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MinecraftLauncher.Pages.SettingPages"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlBackgroundListLowBrush}">
    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <ScrollViewer>
            <StackPanel Margin="16,8,16,0">
                <StackPanel>
                    <TextBlock
                        Text="主题"
                        Margin="0,8"
                        FontSize="18"/>
                    <RadioButton
                        Content="浅色"
                        x:Name="Light"
                        Checked="Button_Checked"/>
                    <RadioButton
                        x:Name="Dark"
                        Content="深色"
                        Checked="Button_Checked"/>
                    <RadioButton
                        x:Name="Default"
                        Content="跟随系统"
                        Checked="Button_Checked"/>
                </StackPanel>
                <TextBlock
                    Text="配置"
                    Margin="0,8"
                    FontSize="18"/>
                <TextBox
                    Margin="0,2"
                    x:Name="Java8Root"
                    Header="修改 Java8 路径"
                    KeyDown="TextBox_KeyDown"/>
                <StackPanel
                    Margin="0,2"
                    Orientation="Horizontal">
                    <Button
                        Content="选择"
                        Margin="0,0,2,0"
                        Click="OpenButton_Click"
                        x:Name="ChooseJava8Root"/>
                    <Button
                        Margin="2,0"
                        Content="保存"
                        Click="Button_Click"
                        x:Name="SaveJava8Root"/>
                </StackPanel>
                <TextBox
                    Margin="0,2"
                    x:Name="Java16Root"
                    Header="修改 Java16 路径"
                    KeyDown="TextBox_KeyDown"/>
                <StackPanel
                    Margin="0,2"
                    Orientation="Horizontal">
                    <Button
                        Content="选择"
                        Margin="0,0,2,0"
                        Click="OpenButton_Click"
                        x:Name="ChooseJava16Root"/>
                    <Button
                        Margin="2,0"
                        Content="保存"
                        Click="Button_Click"
                        x:Name="SaveJava16Root"/>
                </StackPanel>
                <TextBox
                    Margin="0,2"
                    x:Name="MCRoot"
                    Header="修改 Minecraft 路径"
                    KeyDown="TextBox_KeyDown"/>
                <StackPanel
                    Margin="0,2"
                    Orientation="Horizontal">
                    <Button
                        Content="选择"
                        Margin="0,0,2,0"
                        x:Name="ChooseMCRoot"
                        Click="OpenButton_Click"/>
                    <Button
                        Margin="2,0"
                        Content="保存"
                        x:Name="SaveMCRoot"
                        Click="Button_Click"/>
                </StackPanel>
                <TextBlock
                    Text="更新"
                    Margin="0,8"
                    FontSize="18"/>
                <TextBlock
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    FontSize="{ThemeResource ContentControlFontSize}"
                    Text="{x:Bind local:SettingPage.VersionTextBlockText}"/>
                <TextBlock
                    Text="其他"
                    Margin="0,8"
                    FontSize="18"/>
                <HyperlinkButton
                    x:Name="FeedBack"
                    Content="在GitHub上反馈"
                    NavigateUri="https://github.com/wherewhere/Minecraft-Launcher/issues"/>
                <HyperlinkButton
                    x:Name="LogFolder"
                    Click="Button_Click"
                    Content="打开日志文件夹"/>
                <Button
                    Margin="0,2"
                    x:Name="TestPage"
                    Click="Button_Click"
                    Content="前往测试页面"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
